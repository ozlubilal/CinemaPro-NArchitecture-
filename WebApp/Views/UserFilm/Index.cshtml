@using Application.Features.Films.Queries.GetList;
@using Core.Application.Responses;

@model GetListResponse<GetListFilmListItemDto>;

@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<div class="container">
    @for (int i = 0; i < Model.Items.Count; i += 4)
    {
        <div class="row justify-content-center">
            @for (int j = i; j < Math.Min(i + 4, Model.Items.Count); j++)
            {
                var item = Model.Items[j];
                <div class="col-md-3">
                    <div class="card m-3">
                        <img src="@item.ImageUrl" onclick="window.location.href='@Url.Action("FilmDetail","UserFilm",new {id=item.Id,date = DateTime.Today.ToString("yyyy-MM-dd") })'" height="270" class="card-img-top" />
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <!-- Ek bilgileri buraya ekleyebilirsiniz -->
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

