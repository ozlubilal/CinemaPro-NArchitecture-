@using Application.Features.FilmSessions.Commands.Update;

@model UpdateFilmSessionCommand;
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card-header text-center"><h2>Film Seansı Güncelle</h2></div>
<div class="mt-5 col-md-3">
    <form method="post" action="Update" enctype="application/x-www-form-urlencoded">
        <input type="hidden" name="Id" value="@Model.Id" />
       <label for="FilmName">Film Adı</label>
       <select class="form-control" name="FilmId" value="@Model.FilmId">
            @foreach (var film in ViewBag.Films.Items)
            {
                <option value="@film.Id">@film.Name</option>
            }
        </select>
        <label for="SaloonName">Salon Adı</label>
        <select class="form-control" name="SaloonId" value="@Model.SaloonId">
            @foreach (var saloon in ViewBag.Saloons.Items)
            {
                <option value="@saloon.Id">@saloon.Name</option>
            }
        </select>
        <label for="Price">Fiyat</label>
        <input type="text" class="form-control" name="Price" value="@Model.Price" placeholder="@Model.Price" />
        <label for="FilmSessionDateTime">Film Seans Tarihi</label>
        <input type="date" class="form-control" asp-for="FilmSessionDate" value="@Model.FilmSessionDate.ToString("yyyy-MM-ddTHH:mm")" />
        <label for="StartTime">Başlangıç Saati</label>
        <input type="time" class="form-control" asp-for="StartTime" value="@Model.StartTime"/>
        <label for="EndTime">Bitiş Saati</label>
        <input type="time" class="form-control" asp-for="EndTime" value="@Model.EndTime"/>
        <button type="submit" class="btn btn-primary mt-2 float-end">Güncelle</button>
    </form>
    
</div>